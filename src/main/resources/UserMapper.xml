<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ink.zhiyi.hello.mapper.UserMapper">
    <select id="findAll" resultType="ink.zhiyi.hello.domain.User">
        select * from users
    </select>

    <select id="findById" resultType="ink.zhiyi.hello.domain.User">
        select * from users where id = #{id}
    </select>
</mapper>